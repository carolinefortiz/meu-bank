<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChavesActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textStyle="bold"
            android:text="Cadastrar/Remover Chaves" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar telefone:" />

        <EditText
            android:id="@+id/editTextTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite o Telefone"
            android:inputType="text"
            android:onClick="telefone" />

        <Button
            android:id="@+id/cadastrarTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cadastrarTelefone"
            android:text="Cadastrar Telefone" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar CPF" />

        <EditText
            android:id="@+id/editTextCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite o CPF"
            android:inputType="text"
            android:onClick="Cpf" />

        <Button
            android:id="@+id/cadastrarCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cadastrarCpf"
            android:text="Cadastrar CPF" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remover Chave" />

        <EditText
            android:id="@+id/editTextChaveRemover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite a Chave"
            android:inputType="text"
            android:onClick="chaveRemover" />

        <Button
            android:id="@+id/remover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="remover"
            android:text="Remover" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>